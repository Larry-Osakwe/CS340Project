<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (players.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Gamertag</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Region</th>
                        <th scope="col">Team</th>
                        <th scope="col">Position</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% players.forEach((player, index) => { %>
                        <tr>
                            <th scope="row"><%= player.id %></th>
                            <td><%= player.gamertag %></td>
                            <td><%= player.fname %></td>
                            <td><%= player.lname %></td>
                            <td><%= player.region %></td>
                            <td><%= player.team %></td>
                            <td><%= player.position %></td>
                            <td>
                                <a href="/players/edit/<%= player.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/players/delete/<%= player.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <p class="text-center">Go <a href="/players/add" >here</a> to add players.</p>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/players/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>