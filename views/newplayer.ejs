<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Player</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="gamertag" placeholder="gamertag">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fname" placeholder="first name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lname" placeholder="last name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="teamname" placeholder="team name">
                </div>
                <div class>
                    <label>
                    Region: 
                        <select name="regionSelect">
                            <option>EU</option>
                            <option>NA</option>
                            <option>CN</option>
                            <option>KR</option>
                            <option>BR</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    <label>
                    Position: 
                        <select name="positionSelect">
                            <option>Top</option>
                            <option>Jungle</option>
                            <option>Middle</option>
                            <option>Bottom</option>
                        </select>
                    </label>
                </div>
            </form>
            <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            <a href="/players">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

