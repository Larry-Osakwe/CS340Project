<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (player) { %>
        <div style="width: 30%; margin: 25px auto;">
                <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group">
                            <input class="form-control" type="text" name="TeamName" placeholder="Team Name>
                        </div>
                        <div class="form-group">
                            <label>
                                Blue Side 
                                <input class="form-control" type="radio" name="side" value="Blue">
                            </label>
                            <label>
                                Red Side
                                <input class="form-control" type="radio" name="side" value="Red">
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="wins" placeholder="Wins">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="losses" placeholder="Losses">
                         </div>
                         
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Add Team</button>
                </form>
    <% } else { %>
        <p class="text-center">Player Not Found. Go <a href="/teams/add">here</a> to add teams.</p>
    <% } %>
</div>
</div>
</body>
</html>