<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (player) { %>
        <div style="width: 30%; margin: 25px auto;">
                <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="Champion name">
                        </div>
                        <div class="form-group">
                            <label>
                                Male 
                                <input class="form-control" type="radio" name="gender" value="Male">
                            </label>
                            <label>
                                Female
                                <input class="form-control" type="radio" name="gender" value="Female">
                            </label>
                            <label>
                                Other
                                <input class="form-control" type="radio" name="gender" value="Other">
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="archetype" placeholder="Faction">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Edit Champion</button>
                </form>
    <% } else { %>
        <p class="text-center">Player Not Found. Go <a href="/champions/add">here</a> to add champions.</p>
    <% } %>
</div>
</div>
</body>
</html>