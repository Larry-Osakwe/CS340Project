<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (players.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Champion</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Archetype</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% players.forEach((player, index) => { %>
                        <tr>
                            <th scope="row"><%= player.id %></th>
                            <td><%= player.name %></td>
                            <td><%= player.gender %></td>
                            <td><%= player.archetype %></td>
                            <td>
                                <a href="/champions/edit/<%= player.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/champions/delete/<%= player.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <p class="text-center">Go <a href="/champions/add" >here</a> to add champions.</p>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/champions/add" >here</a> to add champions.</p>
        <% } %>
    </div>
</div>
</body>
</html>